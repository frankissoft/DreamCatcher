<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tool"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dream_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dream Title"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/dream_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dream Date" />

    </LinearLayout>

    <ImageView
        android:id="@+id/dream_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_gravity="end"
        tool:src="@drawable/dream_deferred_icon"
        android:contentDescription="Dream Icon" />
</RelativeLayout>